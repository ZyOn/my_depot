<div class="depot-form">
	
<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <fieldset>
  <legend>Enter User Details</legend>
  
  <div>
    <%= f.label :name %>:
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div>
    <%= f.label :user_password, 'Password' %>:
    <%= f.text_field :password, :size => 40 %>
  </div>
  <div>
    <%= f.label :user_password_confirmation, 'Password' %>:
    <%= f.text_field :password, :size => 40 %>
  </div>
  <div>
    <%= f.submit "Add User", :class => "submit" %>
  </div>
  
  </fieldset>
<% end %>

</div>
